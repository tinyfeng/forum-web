<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container" style="background: #222">
    <meta charset="utf-8"> 
    <link rel="stylesheet" href="bootstrap.min.css">
    <script src="jquery.min.js"></script>
    <script src="bootstrap.min.js"></script>
     
    <nav class="navbar navbar-default" role="navigation" style="border: none ">
      <div class="container-fluid" style="background: #222">
        <div class="navbar-header" style="background: #222; margin-bottom: 5px;">
          <button type="button" class="navbar-toggle" data-toggle="collapse"
                  data-target="#example-navbar-collapse" style="bottom: -10px; background-color: cadetblue;">
              <span class="sr-only">切换导航</span>
              <span class="icon-bar" style="background: #fff"></span>
              <span class="icon-bar" style="background: #fff"></span>
              <span class="icon-bar" style="background: #fff"></span>
          </button>
          <div class="navbar-brand" style="background: #222">
            <%= link_to "Tiny 论坛", root_path, id: "logo" %></div>
        </div>
        <div class="collapse navbar-collapse" style="background: #222" id="example-navbar-collapse">
            <ul class="nav navbar-nav navbar-right" style="background: #222; margin-top: 10px; margin-bottom: -10px;">          
                <li ><%= link_to "首页", root_path %></li>
                <% if logged_in? %>
                <li><%= link_to "我的账户", current_user  %></li>
                <li><%= link_to "退出", logout_path, method: :delete %></li>
                <% else %>
                <li><%= link_to "登录", login_path %></li>
                <% end %>            
            </ul>
        </div>
      </div>
    </nav>     
  </div>
</header>